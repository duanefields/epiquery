{
  "name": "epiquery",
  "version": "0.0.1",
  "description": "run templated queries from the http's",
  "main": "./bin/epic-server",
  "dependencies": {
    "socket.io": "0.9.13",
    "coffee-script": "1.6.2",
    "express": "3.1.0",
    "docopt": "0.4.0",
    "forever": "0.10.0",
    "underscore": "1.4.4",
    "tedious": "0.1.3",
    "dot": "1.0.1",
    "q": "0.9.2"
  },
  "bin": {
    "update_repo_dir": "bin/update_or_clone_repo"
  },
  "config": {
    "db_port":"",
    "db_host":"",
    "db_user":"",
    "db_password":"",
    "template_directory": "",
    "template_repository": "",
    "template_update_interval": "",
    "http_port":"8080"
  },
  "engine": {
    "node": "0.10.1"
  },
  "repository": {
    "type": "git",
    "url":  "git://github.com/intimonkey/epic-query.git"
  },
  "scripts": {
    "prestart": "./bin/setup-environment",
    "prestop": "./bin/setup-environment",
    "pretest": "./bin/setup-environment",
    "start": "npm run-script update_templates ; forever start --append -o `pwd`/var/log/epic-server.out.log -e `pwd`/var/log/epic-server.err.log -l `pwd`/var/log/forever.log --watchDirectory ./bin --watch -c coffee bin/epic-server",
    "debug": "forever --append -o `pwd`/var/log/epic-server.out.log -e `pwd`/var/log/epic-server.err.log -l `pwd`/var/log/forever.log --watchDirectory ./bin --watch -c coffee bin/epic-server",
    "stop": "forever stopall",
    "status": "forever list",
    "show-env": "bin/test",
    "update_templates": "forever start --append -c coffee ./bin/epic-run_process_at_interval \"./bin/update_or_clone_repo ${npm_package_config_template_directory} ${npm_package_config_template_repository}\" ${npm_package_config_template_update_interval}",
    "test": "npm run-script show-env",
    "predeploy": "",
    "postdeploy": ""
  },
  "os": ["!win32"]
}
